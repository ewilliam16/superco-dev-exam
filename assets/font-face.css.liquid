@font-face {
    font-family: "GTSuperDisplay";
    src: url('https:{{ 'GT-Super-Display-Light.woff2' | asset_url }}') format("woff2"),
         url('https:{{ 'GT-Super-Display-Light.woff' | asset_url }}') format("woff"),
         url('https:{{ 'GT-Super-Display-Light.ttf' | asset_url }}')  format('truetype');
}
@font-face {
    font-family: "Platform";
    src: url('https:{{ 'Platform-Regular-Web.woff2' | asset_url }}') format("woff2"),
         url('https:{{ 'Platform-Regular-Web.woff' | asset_url }}') format("woff"),
         url('https:{{ 'Platform-Regular.ttf' | asset_url }}')  format('truetype');
}
.heading-font{
    font-family: 'GTSuperDisplay';
    font-feature-settings: 'pnum' on, 'lnum' on;
    font-weight: 400;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
}
.body-font{
    font-family: 'Platform';
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
}